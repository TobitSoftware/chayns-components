{
    "name": "chayns-components",
    "version": "5.0.0-beta.0",
    "description": "A set of beautiful React components for developing your own applications with chayns.",
    "main": "index.js",
    "workspaces": [
        "packages/*"
    ],
    "sideEffects": false,
    "scripts": {
        "storybook": "storybook dev -p 6006",
        "storybook:locale": "storybook dev --https --ssl-cert //fs1/ssl/tobitag.crt --ssl-key //fs1/ssl/tobitag.key -h W-MGesenhues.tobit.ag -p 6006",
        "build:storybook": "storybook build",
        "lerna:version": "lerna version --no-push",
        "lerna:build": "lerna run build",
        "lerna:clean": "npx lerna clean -y",
        "prepare": "husky install",
        "preversion": "lerna exec -- npm run build:types",
        "upgrade:minor": "lerna exec -- ncu -u -t minor",
        "upgrade": "lerna exec -- ncu -u",
        "docs": "npx ts-node --project tsconfig.scripts.json scripts/generate-docs.ts"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "prettier --write"
        ],
        "*.{css,html,json,md,scss}": "prettier --write"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TobitSoftware/chayns-components.git"
    },
    "keywords": [
        "chayns",
        "react",
        "components"
    ],
    "author": "Tobit.Software",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/TobitSoftware/chayns-components/issues"
    },
    "homepage": "https://github.com/TobitSoftware/chayns-components#readme",
    "browserslist": [
        ">0.5%",
        "not dead",
        "not op_mini all",
        "not IE 11"
    ],
    "devDependencies": {
        "@babel/cli": "^7.28.3",
        "@babel/core": "^7.28.3",
        "@babel/preset-env": "^7.28.3",
        "@babel/preset-react": "^7.27.1",
        "@babel/preset-typescript": "^7.27.1",
        "@chayns-toolkit/eslint-config": "^2.0.2",
        "@storybook/addon-actions": "^7.6.20",
        "@storybook/addon-essentials": "^7.6.20",
        "@storybook/addon-links": "^7.6.20",
        "@storybook/addon-mdx-gfm": "^7.6.20",
        "@storybook/react": "^7.6.20",
        "@storybook/react-webpack5": "^7.6.20",
        "@types/uuid": "^10.0.0",
        "babel-loader": "^9.2.1",
        "concurrently": "^9.2.1",
        "eslint": "^8.57.1",
        "eslint-plugin-storybook": "^0.12.0",
        "form-data": "^4.0.4",
        "lerna": "8.2.4",
        "motion": "^12.23.12",
        "organize-imports-cli": "^0.10.0",
        "prettier": "^3.6.2",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "storybook": "^7.6.20",
        "ts-morph": "^27.0.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    }
